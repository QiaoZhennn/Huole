{
  "title": {
    "display": true,
    "padding": 5,
    "text": "Pending Tx"
  },
  "legend": {
    "display": false
  },
  "responsive": true,
  "scales": {
    "yAxes": [
      {
        "ticks": {
          "beginAtZero": true
        }
      }
    ],
    "xAxes": [
      {
        "display": false
      }
    ]
  },
  "tooltips": {
    "backgroundColor": "#686868",
    "titleFontColor": "white",
    "bodyFontColor": "white"
  },
  "elements": {
    "line": {
      "borderColor": "#c271f5",
      "fill": false
    },
    "point": {
      "backgroundColor": "#c271f5",
      "hoverRadius": 6,
      "borderColor": "#c271f5",
      "borderWidth": 2
    }
  },
  "scaleShowLabels": false,

  "layout": {
    "padding": {
      "left": 5,
      "right": 5,
      "top": 5,
      "bottom": 0
    }
  }
}
